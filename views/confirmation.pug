include header.pug
div.confirmation.page
	h1.title Confirm Your Shirt
	div.shirt
		div.row
			if data.colour
				div.kitImage.small-12.medium-6.large-4.columns
					img(src="/public/images/kits/" + data.colour + ".gif")
			else
				div.kitImage.small-12.medium-6.large-4.columns
					img(src="/public/images/kits/" + data.style + "/" + data.club + "-" + data.strip + ".gif")
			div.info.small-12.medium-6.large-8.columns
				div.details.row
					div.title
						if data.colour
							h3 Customised Shirt
						else 
							h3 #{data.fullClubName}
					div.small-12.medium-6.columns
						div
							h5 Kit Name: #{data.name} 
						div 
							h5 Kit Number: #{data.number} 
						div 
							h5 Font: #{data.fullStyle}
						if data.colour
							div 
								h5 Size: #{data.childOrAdult} 
					div.small-12.medium-6.columns
						if data.colour
							div 
								h5 Shirt Colour: #{data.colour} 
							div 
								h5 Letter Style: #{data.letter} 
							div 
								h5 Sleeves: #{data.sleeve}
						else 
							div 
								h5 Strip: #{data.fullStrip} 
							div 
								h5 Sleeves: #{data.sleeve}
							div 
								h5 Size: #{data.childOrAdult} 
				div
					h3 Total Cost For Shirt: Â£#{data.fullCost}
	div.bottom
		div.row
			div.action.small-12.medium-2.columns
				a.btn(href="/")
					span Home
			div.action.small-12.medium-2.columns
				a.btn(href="/service")
					span Start Again
			div.action.small-12.medium-2.columns
				a.addToBasket.btn(href="/basket?shirtObject=" + data.shirtObject)
					span Confirm