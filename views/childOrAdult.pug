include header.pug
div.childOrAdult.page
	div.content
		h1.title Adult or Child?
		p.pageInfo Do you have an adults shirt or a child's shirt?
		div.choices.row
			div.choice.topChoice.small-12.medium-6.columns
				div.heroPrinting
					h3.optionTitle Adults
					h5.optionSubTitle Perfect for any adult shirt, and suitable for larger children's shirts. Letters are approx. 
						if data.style == "current"
							span 50mm 
						else 
							span 53mm 
						span high and numbers approx. 256mm high.
					div.action
						a.btn(href="/printingType?childOrAdult=Adult&style=" + data.style)
							span Select
			div.choice.bottomChoice.small-12.medium-6.columns
				div.customPrinting
					h3.optionTitle Youths
					h5.optionSubTitle Ideal for youth shirts up to roughly 8 years old. Letters are approx. 33mm high and numbers approx. 163mm high.
					div.action
						a.btn(href="/printingType?childOrAdult=Youth&style=" + data.style)
							span Select
	include footerFlow.pug