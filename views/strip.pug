include header.pug
div.page
	h1 Which Strip Do You Have?
	if data.stripCount === 2
		div.strips.row
			div.strip.small-12.medium-6.large-6.columns
				h3 Home
				div.image
					img(src="/public/images/kits/" + data.club + "-home.gif")
				div.btnDiv
					a.btn(href="/flow?strip=home&club=" + data.club + "&printingType=" + data.printingType + "&deliveryType=" + data.deliveryType +"&style=" + data.style)
						span Select
			div.club.small-12.medium-6.large-6.columns
				h3 Away
				div.image
					img(src="/public/images/kits/" + data.club + "-away.gif")
				div.btnDiv
					a.btn(href="/flow?strip=away&club=" + data.club + "&printingType=" + data.printingType + "&deliveryType=" + data.deliveryType +"&style=" + data.style)
						span Select
	else 
		div.strips.row
			div.strip.small-12.medium-4.large-4.columns
				h3 Home
				div.image
					img(src="/public/images/kits/" + data.club + "-home.gif")
				div.btnDiv
					a.btn(href="/flow?strip=home&club=" + data.club + "&printingType=" + data.printingType + "&deliveryType=" + data.deliveryType +"&style=" + data.style)
						span Select
			div.club.small-12.medium-4.large-4.columns
				h3 Away
				div.image
					img(src="/public/images/kits/" + data.club + "-away.gif")
				div.btnDiv
					a.btn(href="/flow?strip=away&club=" + data.club + "&printingType=" + data.printingType + "&deliveryType=" + data.deliveryType +"&style=" + data.style)
						span Select
			div.club.small-12.medium-4.large-4.columns
				h3 Alternative
				div.image
					img(src="/public/images/kits/" + data.club + "-third.gif")
				div.btnDiv
					a.btn(href="/flow?strip=third&club=" + data.club + "&printingType=" + data.printingType + "&deliveryType=" + data.deliveryType +"&style=" + data.style)
						span Select
include footer.pug