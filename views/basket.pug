include header.pug
div.page.basket
	div.content
		h1.title Your Basket
		div.shirts
			if data.shirtsArray.length > 0
				div.another
					a(href="/service") Add Another?	
				each shirt in data.shirtsArray
					div.shirt
						div.row
							if shirt.colour
								div.notKitImage.small-12.medium-6.large-4.columns
									img(src="/public/images/kits/" + shirt.colour + ".gif")
							else
								div.kitImage.small-12.medium-6.large-4.columns
									img(src="/public/images/kits/" + shirt.style + "/" + shirt.club + "-" + shirt.strip + ".gif")
							div.info.small-12.medium-6.large-8.columns
								div.details.row
									div.title
										if shirt.colour
											h3 Customised Shirt
										else 
											h3 #{shirt.fullClubName}
									div.small-12.large-6.columns
										div
											h5 Kit Name: #{shirt.name} 
										div 
											h5 Kit Number: #{shirt.number} 
										div 
											h5 Font: #{shirt.fullStyle} 
										if data.colour
											div 
												h5 Size: #{shirt.childOrAdult} 
									div.small-12.large-6.columns
										if shirt.colour
											div 
												h5 Letter Colour: #{shirt.colour} 
											div 
												h5 Letter Style: #{shirt.letter} 
											div 
												h5 Sleeves: #{shirt.sleeve}
										else 
											div 
												h5 Strip: #{shirt.fullStrip} 
											div 
												h5 Sleeves: #{shirt.sleeve}
											div 
												h5 Size: #{shirt.childOrAdult} 
								div
									h4 Total Cost For Shirt: £
										span #{shirt.displayCost}
								div.removeBasket
									a(href="/deleteShirtFromBasket?timestamp=" + shirt.timestamp) Remove From Basket
			else 
					div.emptyBasket
						h5 You have no shirts in your basket. 
							a.addShirt(href="/service") Add one here
							span .
		if data.shirtsArray.length > 0 
			div.overallActions
				div
					div  
						span.formLabel Delivery Methods: 
						select.deliveryOption
							each deliveryMethod in data.deliveryTypes
								option  #{deliveryMethod}
					div.totalCost
						h4 Total Cost: £#{data.cost}
					div.payment.notModal
						a() Make Payment		
					div.delete
						a(href="/deleteShirtFromBasket?timestamp=all") Empty Your Basket

if false
	div.serviceModal
		div.content
			h4 You have choosen different services for each shirt. Do you want the same for all shirts?
			select.serviceOption
				option(value="pleaseselect") Please Select
				option(value="leave") Keep services different for each shirt
				option(value="send") You are sending all shirts in the post
				option(value="delivery") You are bringing all shirts to the office
				option(value="post") You want just the letters for each shirt sent to you
			div.payment.paymentModal.hiddenFirst
				a() Make Payment	

include footer.pug