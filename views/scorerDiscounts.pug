include header.pug
div.teams.scorerDiscounts.page
	div.content
		div.title 
			h1 The Current Players with Scorer Discounts
		div.form.row
			ul.clubs
			each club in data.clubList
				li.clubDiscounts.row
					div.listContent
						div.shirtImage.small-12.medium-4.columns
							div.image
								img(src="/public/images/shirts/current/" + club + ".gif")
						div.playerList.small-12.medium-8.columns
							table
								tr.tableHeadings
									th Name
									th Kit Number
									th Discount
									th
								each player in data.players
									if club == player.club
										tr
											td #{player.kitname}
											td #{player.kitnumber}
											td Â£#{player.discount}
											td 
												a(href="/style?club=" + player.club + "&name=" + player.kitname + "&number=" + player.kitnumber + "&shirtCost=" + player.shirtCost + "&printingType=hero") Select

include footer.pug